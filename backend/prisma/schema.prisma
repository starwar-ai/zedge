  @@unique([edgeDataCenterId, name])
  @@map("resource_pools")
  @@index([edgeDataCenterId])
  @@index([status])
  @@index([poolType])
  @@index([subnetId])
}

enum ResourcePoolType {
  COMPUTE    @map("compute")
  STORAGE    @map("storage")
